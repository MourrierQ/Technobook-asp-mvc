@model IEnumerable<Technobook.Model.Client.Models.User>

@{
    ViewBag.Title = "GetFriendRequests";
}

<h2>GetFriendRequests</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.ActionLink("Accept", "AnswerRequest", "Relation", new { UserID = item.ID, Answer = true}, null)
        </td>
        <td>
            @Html.ActionLink("Refuse", "AnswerRequest", "Relation", new { UserID = item.ID, Answer = false }, null)
        </td>
    </tr>
}

</table>
